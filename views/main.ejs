    <script>document.addEventListener("DOMContentLoaded", function() {
        const navbar = document.querySelector(".navbar");
        const links = document.querySelectorAll(".nav-links a");
        const frame = document.getElementById("content-frame");
    
        
        const pages = {
            "HOME": "/home-vid",
            "ABOUT US": "/about",
            "REVIEWS": "/reviews",       
            "BLOG SPOT": "/blog",
            "CONTACT US": "/contactUs"
        };
         frame.src = pages["ABOUT US"];

    // Scroll event to detect when user scrolls past hero section
    window.addEventListener("scroll", function() {
        if (window.scrollY > window.innerHeight * 0.5 && !userClicked) {
            frame.src = pages["ABOUT US"];
        }

        if (window.scrollY > 50) {
            navbar.classList.add("scrolled");
        } else {
            navbar.classList.remove("scrolled");
        }
    });
    
        
        window.addEventListener("scroll", function() {
            if (window.scrollY > 50) {
                navbar.classList.add("scrolled");
            } else {
                navbar.classList.remove("scrolled");
            }
        });
    
        links.forEach(link => {
            link.addEventListener("click", function(event) {
                event.preventDefault(); 
                links.forEach(l => l.classList.remove("active"));
                link.classList.add("active");
    
                const page = pages[link.textContent.trim()];
    
                if (page === "%") {
                    window.scrollTo({ top: 0, behavior: "smooth" });
                } else if (page) {
                    frame.classList.add("fade-out");
    
                    setTimeout(() => {
                        frame.src = page;
                        frame.onload = () => {
                            frame.classList.remove("fade-out"); 
                            
                           
                            setTimeout(() => {
                                document.getElementById("content-framing-final").scrollIntoView({ behavior: "smooth" });
                            }, 300);
                        };
                    }, 500); 
                }
            });
        });
    
        links[0].classList.add("active");
        frame.src = pages["HOME"];
    });
    

    </script>
