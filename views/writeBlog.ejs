<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Owner Blog Portal</h1>
    <a href="/">Home</a> | <a href="/blog">View Community Blog</a>

    <form action="/add" method="POST">
        <input type="text" name="title" placeholder="Blog Title" required>
        <textarea name="content" placeholder="Blog Content" required></textarea>
        <button type="submit">Publish</button>
    </form>

    <h2>All Blog Posts</h2>
    <% blogs.forEach(blog => { %>
        <div class="blog-post">
            <h3><%= blog.title %></h3>
            <p><%= blog.content %></p>
            <small>Posted on: <%= blog.createdAt.toDateString() %></small>
        </div>
    <% }); %>
</body>
</html>
