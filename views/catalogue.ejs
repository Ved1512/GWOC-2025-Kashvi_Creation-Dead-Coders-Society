<!DOCTYPE html>
<html lang="en">
<head>
    <title>Catalog</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>


<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

<body class = "fade-in">

    <style>
   /* General Styles */
body {
    font-family: 'Roboto', sans-serif;
    background: #fff;
    text-align: center;
    margin: 0;
    padding: 0;
}

/* Heading */
h1 {
    color: #fff;
    font-size: 2rem;
    margin-top: 20px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 3px;
}

/* Navigation Bar */
nav {
    background: url('/images/saree-images.jpg') no-repeat center/cover;
    padding: 100px;
}

nav a {
    text-decoration: none;
    color: #fff;
    letter-spacing: 2px;
    font-size: 1rem;
    margin: 0 10px;
    padding: 10px 15px;
    border-radius: 5px;
    transition: 0.3s;
    font-weight: 300;
    position: relative;
}


nav a:not(.buttonsnav a)::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: -3px;
    width: 0;
    height: 2px;
    background-color: #fff;
    transition: width 0.3s ease, left 0.3s ease;
}

nav a:not(.buttonsnav a):hover::after {
    width: 100%;
    left: 0;
}

/* Product Grid */
.products {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    padding: 20px;
    max-width: 1200px;
    margin: auto;
}

/* Responsive Grid Layout */
@media (max-width: 1024px) {
    .products {
        grid-template-columns: repeat(1, 1fr);
    }
    nav a {
        font-size: 2rem;
    }
    .products {
        width: 60%;
        left: 20%;
        position: absolute;
    }
    .product img {
        width: 80%;
        min-height: 500px;
        object-fit: cover;
        border-radius: 8px;
    }
    .product h2{
        
    }
}

/* Product Card */
.product {
    background: white;
    padding: 20px;
    border-radius: 10px;
    min-height: 380px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.product:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

/* Product Image */
.product img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 8px;
}

/* Product Title */
.product h2 {
    font-size: 1.3rem;
    color: #333;
    margin: 15px 0;
    text-transform: uppercase;
    font-family: "Roboto";
    font-weight:400;
    left: 1x;
}

/* Product Price */
.product p {
    color: #333;
    font-size: 1rem;
    
    font-family: "Roboto";
    font-weight:200;
    
}
.product a{
    text-decoration: none;
    
}
.buttonsnav{
    position: absolute;
    right:1vh;
    top:1vh;


}
.buttonsnav button{
    height:4vh;
    width:10vh;
    background:rgba(0,0,0,0);
    border: 1px solid #fff;
    border-radius: 6px;
    color:#fff; 

}
.buttonsnav button img {
    height: 18px;
    width: 18px;
    vertical-align: middle;
}

/* Hover Effect */
.buttonsnav button:hover {
    background: #fff;
    color: black;
    cursor: pointer;
}

.fade-in {
    opacity: 0;
    transform: translateY(10px); /* Optional: Slight slide-up effect */
    animation: fadeInAnimation 0.6s ease-in-out forwards;
}

/* Keyframes for fade-in effect */
@keyframes fadeInAnimation {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive Design */
@media (max-width: 1000px) {
    .buttonsnav {
        right: 1vh;
        top: 1vh;
        flex-direction: column;
        align-items: flex-end;
    }


    .buttonsnav button {
        width: 20vh;
        font-size: 2rem;

    }
    .buttonsnav button img{
        height:40px;
        width:40px;
    }
}

    </style>

    <!-- section{} -->
    <nav>
        <div class="headMain">
        <h1 id = "mainHead">Product Catalog</h1>
        <a href="/catalogue?category=All">All</a>
        <a href="/catalogue?category=category 1">Category 1</a>
        <a href="/catalogue?category=category 2">Category 2</a>
        <a href="/catalogue?category=category 3">Category 3</a>
        <a href="/catalogue?category=category 4">Category 4</a>
    </div>
<div class="buttonsnav">
    <a href="/"><button id = "home">Home</button></a>
    <a href="/cart"><button id = "cart"><img src="/images/shoppingCart.png"  height = "20px" width = "20px" margin-top = "10%">Cart  (<%= cartLength %>)</button></a>    

</div>
    </nav>
    
    <div class="products">
        <% products.forEach(product => { %>
            
            <div class="product">
                <a href="/product/<%= product._id %>">
                    <img src="<%= product.image %>" alt="<%= product.name %>">
                    <h2 id = "name"><%= product.name %></h2>
                    <p> <%= product.details %></p>
                </a>
            </div>
        <% }) %>
    </div>
</body>
</html>
